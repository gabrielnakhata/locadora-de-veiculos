@{
    ViewData["title"] = "Clientes";
}
@model List<MVCApplication.Models.ClienteViewModel>;

<h2>Clientes</h2>
<hr />

<table class="table table-bordered">
    <thead>
        <tr style="background-color:#f6f6f6">
            <th>Id</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>E-mail</th>
            <th>Celular</th>
            <th>CNH</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="Editar(@item.Id)" style="cursor:pointer;">
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Cpf</td>
                <td>@item.Email</td>
                <td>@item.Celular</td>
                <td>@item.Cnh</td>
            </tr>
        }
    </tbody>
</table>
<br />

<button type="button" class="btn btn-block btn-primary" onclick="Cadastrar()">Cadastrar Cliente</button>

<script>
    function Editar(Codigo) {
        window.location = window.origin + "\\Cliente\\Cadastro\\" + Codigo;
    }
    function Cadastrar() {
        window.location = window.origin + "\\Cliente\\Cadastro";
    }
</script>